#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# --- Enterprise++ Balanced Production Gate ---
if [ -f "scripts/enterprise-gate.mjs" ]; then
  node scripts/enterprise-gate.mjs
  if [ $? -ne 0 ]; then
    echo "⛔ Push blockiert: Richtlinienverletzung (Enterprise Gate)"
    exit 1
  fi
else
  echo "⚠️ scripts/enterprise-gate.mjs nicht gefunden - Gate übersprungen"
fi
