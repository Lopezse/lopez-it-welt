{
  "mode": "strict",
  "allow": [
    "policies/change-control.yml",
    "freigaben.json",
    "scripts/log-compliance-status.js",
    ".husky/pre-push",
    "package.json",
    "scripts/enterprise-gate.mjs",
    "scripts/gen-sbom.mjs",
    "scripts/release-tag.mjs"
  ],
  "temporary_allow": [
    {
      "pattern": "docs/**",
      "reason": "Dokumentation, changelogs, validierungsberichte",
      "expires_at": "2025-11-08T23:59:59Z",
      "max_files_per_commit": 50,
      "branch": ["docs/*", "feature/docs"]
    },
    {
      "pattern": "frontend/**",
      "reason": "UI & CSS Updates (Low-Risk)",
      "expires_at": "2025-11-08T23:59:59Z",
      "max_files_per_commit": 25,
      "branch": ["feature/ui", "feature/frontend"]
    }
  ],
  "deny_patterns": [
    "**/*.env",
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/*.pem",
    "**/*.key",
    "**/secrets/**"
  ],
  "approver": {
    "name": "Ramiro Lopez Rodriguez",
    "role": "Inhaber / Compliance Officer",
    "email": "ra-lopez@t-online.de"
  }
}
