{
  "name": "lopez-it-welt",
  "version": "1.0.0",
  "description": "Enterprise++ IT-Lösungen mit perfektem Design-System",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000 --turbo",
    "dev:clean": "rm -rf .next && next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "format:check": "prettier \"**/*\" --ignore-path .prettierignore --check",
    "format:write": "prettier \"**/*\" --ignore-path .prettierignore --write",
    "fix:crlf": "git add -A && git rm --cached -r . && git reset --hard && git add -A",
    "deps:check": "npm audit --audit-level=moderate",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:security": "jest --testPathPattern=security",
    "test:performance": "jest --testPathPattern=performance",
    "test:coverage": "jest --coverage",
    "compliance:check": "node scripts/compliance-check.js",
    "compliance:report": "node scripts/compliance-report.js",
    "deploy:production": "node scripts/deploy-production.js",
    "health:check": "node scripts/health-check.js",
    "qa:full": "npm run type-check && npm run lint && npm run format:check && npm run deps:check && npm run test:unit && npm run test:integration && npm run test:security && npm run test:performance && npm run test:coverage",
    "generate:status": "node scripts/generate-status.js",
    "generate:qa-report": "node scripts/generate-qa-report.js",
    "backup:full": "node scripts/backup-system.js full",
    "backup:incremental": "node scripts/backup-system.js incremental",
    "backup:project": "node scripts/backup-system.js project",
    "backup:mysql": "node scripts/backup-system.js mysql",
    "backup:scheduler": "node scripts/backup-scheduler.js start",
    "backup:scheduler:stop": "node scripts/backup-scheduler.js stop",
    "backup:scheduler:status": "node scripts/backup-scheduler.js status",
    "test": "jest -c jest.config.js",
    "verify:office": "jest -c jest.config.js -t 'Office API smoke' && node -e \"console.log('verify:office PASS – GoBD/DSGVO/ISO27001 checks OK')\"",
    "verify:time": "node tools/tt-audit.mjs && echo \"verify:time PASS (or see audit json)\"",
    "compliance:backup": "node scripts/compliance-backup.mjs",
    "compliance:verify": "node scripts/compliance-verify.mjs",
    "users:create": "node scripts/create-users.mjs",
    "release:sbom": "node scripts/gen-sbom.mjs",
    "release:tag": "node scripts/release-tag.mjs"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "@types/nodemailer": "^7.0.1",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "argon2": "^0.44.0",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "clsx": "^2.0.0",
    "exceljs": "^4.4.0",
    "framer-motion": "^10.16.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "lucide-react": "^0.400.0",
    "mysql2": "^3.15.0",
    "next": "^15.5.3",
    "next-themes": "^0.2.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.6",
    "qrcode": "^1.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^5.5.0",
    "speakeasy": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "autoprefixer": "^10.4.0",
    "eslint": "^9.39.0",
    "eslint-config-next": "15.3.2",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "lint-staged": "^15.5.2",
    "node-fetch": "^2.7.0",
    "postcss": "^8.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
