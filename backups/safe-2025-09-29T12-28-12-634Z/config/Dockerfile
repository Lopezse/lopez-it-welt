# ğŸ³ Lopez IT Welt - Dockerfile
# Multi-Stage Build fÃ¼r optimierte Images

# ========================================
# ğŸ—ï¸ BUILD STAGE
# ========================================
FROM node:18-alpine AS builder

# ğŸ·ï¸ Labels fÃ¼r Security und Wartung
LABEL maintainer="Lopez IT Welt Team"
LABEL description="Lopez IT Welt Enterprise++ Application"
LABEL version="1.0.0"

# ğŸ” Security: Non-root User erstellen
RUN addgroup -g 1001 -S nodejs && \
  adduser -S nextjs -u 1001

# ğŸ“¦ Arbeitsverzeichnis setzen
WORKDIR /app

# ğŸ” Security: Package-Lock kopieren fÃ¼r deterministische Builds
COPY package*.json ./

# ğŸ“¦ Dependencies installieren
RUN npm ci --only=production && npm cache clean --force

# ğŸ“ Source Code kopieren
COPY . .

# ğŸ—ï¸ Application bauen
RUN npm run build

# ========================================
# ğŸš€ PRODUCTION STAGE
# ========================================
FROM node:18-alpine AS runner

# ğŸ” Security: Non-root User erstellen
RUN addgroup -g 1001 -S nodejs && \
  adduser -S nextjs -u 1001

# ğŸ“¦ Arbeitsverzeichnis setzen
WORKDIR /app

# ğŸ” Security: Environment-Variablen setzen
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# ğŸ“¦ Copy built application
COPY --from=builder /app/public ./public
COPY --from=builder /app/.next/standalone ./
COPY --from=builder /app/.next/static ./.next/static

# ğŸ” Security: Berechtigungen setzen
RUN chown -R nextjs:nodejs /app

# ğŸ‘¤ User wechseln
USER nextjs

# ğŸŒ Port exponieren
EXPOSE 3000

# ğŸ” Security: Health Check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3000/api/health || exit 1

# ğŸš€ Application starten
CMD ["node", "server.js"]

# ========================================
# ğŸ“‹ METADATA
# ========================================
# Build-Argumente fÃ¼r verschiedene Umgebungen
ARG BUILD_ENV=production
ARG BUILD_VERSION=1.0.0

# Labels fÃ¼r Container-Management
LABEL org.opencontainers.image.title="Lopez IT Welt"
LABEL org.opencontainers.image.description="Enterprise++ Application"
LABEL org.opencontainers.image.version="${BUILD_VERSION}"
LABEL org.opencontainers.image.vendor="Lopez IT Welt"
LABEL org.opencontainers.image.source="https://github.com/lopez-it-welt"
LABEL org.opencontainers.image.licenses="MIT"

# ğŸ” Security: Scan-Informationen
LABEL security.scan="true"
LABEL security.vulnerability.scan="true"
LABEL security.compliance="DSGVO,ISO27001,GDPR" 